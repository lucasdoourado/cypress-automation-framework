pipeline {
  agent any
  tools {nodejs "node"}
  stages{
    stage('Cypress parallel test') {
      parallel{
        stage('slave node1'){
          agent {
            label "remote_node1"
          }
          steps {
            git url: 'https://github.com/lucasdoourado/cypress-automation-framework.git'
            bat 'npm install'
            bat 'npm update'
            bat 'npm run triggerAllTests-dashboard'
          }
        }
        stage('slave node2'){
          agent {
            label "remote_node2"
          }
          steps {
            git url: 'https://github.com/lucasdoourado/cypress-automation-framework.git'
            bat 'npm install'
            bat 'npm update'
            bat 'npm run triggerAllTests-dashboard'
          }
        }
      }
    }
  }
}